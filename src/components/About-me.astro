---
import educationImage from '../assets/education.png';

const study : {title: string, date: string, description: string}[] = [
    {
        title: 'Bachiller en Ingeniería de Computacion y Sistemas',
        date: '2023',
        description: 'Universidad de San Martin de Porres'
    },
    {
        title: 'Bachiller en Ingenieria Eléctrica',
        date: '2011',
        description: 'Universidad Nacional de San Martín de Porres'
    }
]
---

<section class="w-full flex flex-row justify-center items-center text-white bg-[#130d0d]">
    <div class="w-7xl mx-auto">
        <h1 class="text-4xl font-bold mb-6">Education</h1>
        {
            study.map(({ title, date, description }) => (
            <div class="flex flex-col justify-center items-start mb-6 border-2 rounded-lg p-6">
                <h2 class="text-3xl font-bold mb-6">{title}</h2>
                <p class="font-bold text-lg mb-2">{date}</p>
                <p class="font-bold text-lg mb-2">{description}</p>
            </div>
        ))
    }
    </div>
    <div class="w-96 h-96">
        <img src={educationImage.src} alt="education" class="w-full h-full object-contain">
    </div>
</section>
