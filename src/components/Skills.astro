import postgresql from '../assets/tecnologies/postgresql.svg';
import vscode from '../assets/tecnologies/vscode.svg';
import powerbi from '../assets/tecnologies/power-bi.png';
import git from '../assets/tecnologies/git.svg';
import github from '../assets/tecnologies/github-logo.png';
import intellij from '../assets/tecnologies/intellij.svg';
import windsurf from '../assets/tecnologies/windsurf.png';

const skills = [
    {
        name: 'HTML',
        image: html
    },
    {
        name: 'CSS',
        image: css
    },
    {
        name: 'JavaScript',
        image: javascript
    },
    {
        name: 'Bootstrap',
        image: bootstrap
    },
    {
        name: 'TailwindCSS',
        image: tailwind
    },
    {
        name: 'Typescript',
        image: typescript
    },
    {
        name: 'React',
        image: react
    },
    {
        name: 'Astro',
        image: astro
    },
    {
        name: 'Spring',
        image: spring
    },
    {
        name: '.Net Core',
        image: netcore
    },
    {
        name: 'Java',
        image: java
    },
    {
        name: 'Python',
        image: python
    },
    {
        name: 'MySQL',
        image: mysql
    },
    {
        name: 'PostgreSQL',
        image: postgresql
    },
    {
        name: 'SQL Server',
        image: sqlserver
    },
    {
        name: 'Git',
        image: git
    },
    {
        name: 'GitHub',
        image: github
    },
    {
        name: 'Figma',
        image: figma
    },
    {
        name: 'Power BI',
        image: powerbi
    },
    {
        name: 'VSCode',
        image: vscode
    },
    {
        name: 'IntelliJ',
        image: intellij
