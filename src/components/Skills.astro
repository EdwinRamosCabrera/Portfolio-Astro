---
<section class="w-full flex flex-col justify-center items-center text-white bg-[#1b2735] py-16">
    <div class="w-7xl flex flex-col justify-center items-center">
        <h1 class="text-4xl font-bold pb-10">Conocimientos</h1>
        <div class="flex flex-wrap justify-center items-center gap-4">
            {skills.map((skill) => (
                <div class="flex flex-col justify-center items-center rounded-lg border-2 gap-2 p-4 hover:scale-105 transition duration-300">
                    <img src={skill.image.src} alt={skill.name} class="w-20 h-20" />
                    <h2>{skill.name}</h2>
                </div>
            ))}
        </div>
    </div>
</section>