---
import logo from '../assets/logo.svg';

/** Menu items */
const links : {label: string, href: string}[] = [
  { label: 'Home', href: '#' },
//{ label: 'About', href: '/about/' },
 // { label: 'Experience', href: '#' },
  { label: 'Education', href: '/education/' },
  { label: 'Projects', href: '/project/' },
  { label: 'Skills', href: '/skills/' },
//  { label: 'Certifications', href: '#' },
  { label: 'Contact', href: '/contact/' }
];

---
<nav class="fixed top-0 left-0 w-full flex justify-between items-center bg-gray-800 text-white p-4 z-50" >
    <div class="flex items-center ">
      <img src={logo.src} width="70" height="30" alt="logoDev" />
      <span class="font-semibold">EduDev</span>
    </div>
    
    <div class="bg-[#1d1414] rounded-full px-4 py-2">
      <ul class="flex gap-6">
           {
           links.map(({ label, href }) => (
            <li>
                <a class="link" href={href}>{label}</a>
            </li>
            ))
            }
      </ul>
    </div>

    <div class="text-purple-500">
      <button class="dark-mode-toggle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>
    </div>
  </nav>